{
    "name": "jaculus-tools",
    "version": "0.0.27",
    "description": "Companion CLI application for Jaculus",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jaculus-org/Jaculus-tools.git"
    },
    "author": {
        "name": "Petr Kubica (cubicap)"
    },
    "license": "GPL-3.0-only",
    "type": "module",
    "bin": {
        "jac": "dist/cli.js"
    },
    "main": "dist/cli.js",
    "types": "dist/cli.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "prebuild": "node -p \"'export const version = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/meta/version.ts",
        "build": "tsc -b",
        "clean": "rimraf dist tsconfig.tsbuildinfo",
        "fullclean": "npm run clean && rimraf node_modules"
    },
    "dependencies": {
        "@jaculus/common": "workspace:*",
        "@jaculus/device": "workspace:*",
        "@jaculus/firmware": "workspace:*",
        "@jaculus/link": "workspace:*",
        "@jaculus/project": "workspace:*",
        "chalk": "^5.4.1",
        "get-uri": "^6.0.4",
        "pako": "^2.1.0",
        "serialport": "^13.0.0",
        "tar-stream": "^3.1.7",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@types/node": "^24.0.7",
        "@types/pako": "^2.0.4",
        "@types/tar-stream": "^3.1.4",
        "rimraf": "^6.0.1",
        "typescript": "^5.8.3"
    }
}
