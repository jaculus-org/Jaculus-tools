{
    "name": "jaculus-tools",
    "version": "0.0.26",
    "description": "Companion CLI for Jaculus",
    "license": "GPL-3.0-only",
    "type": "module",
    "bin": {
        "jac": "dist/cli.js"
    },
    "main": "dist/cli.js",
    "types": "dist/cli.d.ts",
    "scripts": {
        "prebuild": "node -p \"'export const version = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/meta/version.ts",
        "build": "tsc -b",
        "clean": "rimraf dist tsconfig.tsbuildinfo",
        "lint": "eslint --ext .ts src"
    },
    "dependencies": {
        "@jaculus/device": "workspace:*",
        "@jaculus/link": "workspace:*",
        "@jaculus/firmware": "workspace:*",
        "@jaculus/project": "workspace:*",
        "@jaculus/common": "workspace:*",
        "chalk": "^5.4.1",
        "cli-progress": "^3.12.0",
        "get-uri": "^6.0.4",
        "serialport": "^13.0.0",
        "tar-stream": "^3.1.7",
        "winston": "^3.17.0",
        "zlib": "^1.0.5"
    },
    "devDependencies": {
        "typescript": "^5.8.3",
        "@types/node": "^24.0.7",
        "@types/tar-stream": "^3.1.4",
        "eslint": "^9.30.0",
        "rimraf": "^6.0.1",
        "typescript-eslint": "^8.35.0"
    }
}
