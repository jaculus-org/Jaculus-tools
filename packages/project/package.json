{
    "name": "@jaculus/project",
    "version": "0.0.1",
    "description": "Library for managing Jaculus projects, including source files, build, and dependencies",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jaculus-org/Jaculus-tools.git"
    },
    "author": {
        "name": "Petr Kubica (cubicap)"
    },
    "license": "GPL-3.0-only",
    "type": "module",
    "exports": {
        "./compiler": {
            "types": "./dist/compiler.d.ts",
            "import": "./dist/compiler.js"
        },
        "./project": {
            "types": "./dist/project.d.ts",
            "import": "./dist/project.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc -b",
        "build:watch": "tsc -b --watch",
        "clean": "rimraf dist tsconfig.tsbuildinfo",
        "fullclean": "npm run clean && rimraf node_modules"
    },
    "dependencies": {
        "@jaculus/common": "workspace:*",
        "@jaculus/device": "workspace:*",
        "@obsidize/tar-browserify": "^6.1.0",
        "buffer": "^6.0.3",
        "pako": "^2.1.0",
        "tar-stream": "^3.1.7",
        "typescript": "^5.8.3"
    },
    "devDependencies": {
        "@types/pako": "^2.0.4",
        "@types/tar-stream": "^3.1.4",
        "rimraf": "^6.0.1"
    }
}
